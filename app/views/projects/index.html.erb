<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>
        <%= link_to 'Name', projects_path( sort_field: 'name', sort_direction: @name_dirn) %>
      </th>
      <th>
        <%= link_to 'Description', projects_path( sort_field: 'description', sort_direction: @description_dirn)%>
      </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

